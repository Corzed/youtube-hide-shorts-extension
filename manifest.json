{
    "manifest_version": 3,
    "name": "Hide YouTube Shorts",
    "version": "1.1",
    "description": "A Chrome extension to hide YouTube Shorts and redirect attempts to view Shorts videos.",
    "permissions": ["activeTab", "scripting"],
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  